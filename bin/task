#!/usr/bin/env php
<?php

$loader = null;
foreach ([
    __DIR__.'/../../../autoload.php', # COMPOSER_HOME/vendor/task/cli/bin
    __DIR__.'/../vendor/autoload.php' # ./bin
] as $autoload) {
    if (file_exists($autoload)) {
        $loader = require $autoload;
        break;
    }
}

$application = new Task\Cli\Application();
$application->run();
